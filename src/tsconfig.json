{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "noEmit": true,
    "inlineSources": true,
    "rootDir": "../"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts",
    "**/*test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./app/app.module#AppModule",
    "genDir": "./ngfactory"
  }
}
