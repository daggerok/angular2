{
  "name": "angular2",
  "version": "0.0.1",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "build": "ng build",
    "wait-20s": "sleep 20",
    "killall": "killall -9 node",
    "lint": "tslint 'src/**/*.ts'",
    "prerun-e2e": "webdriver-manager update",
    "test": "karma start ./config/karma/singlerun.js",
    "run-e2e": "protractor ./config/protractor/conf.js",
    "e2e-ci": "npm-run-all -p start wait-20s-and-run-e2e",
    "wait-20s-and-run-e2e": "npm-run-all wait-20s run-e2e",
    "e2e": "npm-run-all -p start wait-20s-and-run-e2e stop",
    "dev": "ng test # same as karma start ./config/karma/watch.js",
    "start": "ng serve --host 0.0.0.0 --port 3000 --proxy-config ./config/proxy/api.json &",
    "stop": "true | kill -9 $(ps waux | grep angular-cli | grep -v color | awk '{print $2}')"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~2.1.0",
    "@angular/compiler": "~2.1.0",
    "@angular/core": "~2.1.0",
    "@angular/forms": "~2.1.0",
    "@angular/http": "~2.1.0",
    "@angular/platform-browser": "~2.1.0",
    "@angular/platform-browser-dynamic": "~2.1.0",
    "@angular/router": "~3.1.0",
    "@types/jquery": "^2.0.33",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "rxjs": "5.0.0-beta.12",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "@types/jasmine": "^2.2.30",
    "@types/node": "^6.0.42",
    "angular-cli": "1.0.0-beta.18",
    "codelyzer": "1.0.0-beta.1",
    "jasmine-core": "2.4.1",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "npm-run-all": "^3.1.1",
    "protractor": "4.0.9",
    "ts-node": "1.2.1",
    "tslint": "3.13.0",
    "typescript": "~2.0.3"
  }
}
